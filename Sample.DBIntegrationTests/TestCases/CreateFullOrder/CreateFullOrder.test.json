{
  "TestCaseName": "Seed a new Customer with a complete Order and Line Items",
  "Arrangements": [
    {
      "Strategy": "JsonFileSeed",
      "Parameters": {
        "table": "Products",
        "dataFile": "data/products.json",
        "allowIdentityInsert": true
      }
    },
    {
      "Strategy": "HierarchicalSeed",
      "Parameters": {
        "rootTable": "Customer",
        "dataFile": "data/new-customer-order.json"
      }
    }
  ],
  "Actions": [
    {
      "Strategy": "ApiCall",
      "Parameters": {
        "Method": "GET",
        "Endpoint": "/api/orders"
      }
    }
  ],
  "Assertions": [
    {
      "TableName": "Customers",
      "ExpectedDataFile": "expected/customer_expected.json",
      "ComparisonStrategy": "IgnoreColumns",
      "ComparisonParameters": [ "CustomerId" ]
    },
    {
      "TableName": "Orders",
      "ExpectedDataFile": "expected/order_expected.json",
      "ComparisonStrategy": "IgnoreColumns",
      "ComparisonParameters": [ "OrderId", "CustomerId" ]
    },
    {
      "TableName": "OrderItems",
      "ExpectedDataFile": "expected/orderitems_expected.json",
      "ComparisonStrategy": "IgnoreColumns",
      "ComparisonParameters": [ "OrderItemId","OrderId","CustomerId" ]
    }
  ]
}
