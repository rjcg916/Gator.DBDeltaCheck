{
  "TestCaseName": "Add new customers using simple JSON seeding",
  "Arrangements": [
    {
      "Strategy": "JsonFileSeed",
      "Parameters": {
        "table": "Customers",
        "dataFile": "data\\new-customers.json",
        "Outputs": [
          {
            "VariableName": "newCustomerId",
            "Source": {
              "FromTable": "Customers",
              "SelectColumn": "CustomerId",
              "OrderByColumn": "CustomerId",
              "OrderDirection": "DESC"
            }
          }
        ]
      }
    }
  ],
  "Actions": [
    {
      "Strategy": "DurableFunction",
      "Parameters": {
        "OrchestratorName": "ProcessNewCustomerOrder",
        "Payload": {
          "CustomerId": "{newCustomerId}"
        },
        "PollingTimeoutSeconds": 120,
        "ExpectedStatus": "Completed"
      }
    }
  ],
  "Assertions": [
    {
      "TableName": "Customers",
      "ExpectedDataFile": "expected\\one-customer-remains.json",
      "ComparisonStrategy": "IgnoreColumns",
      "ComparisonParameters": [ "CustomerId" ]
    }
  ]
}