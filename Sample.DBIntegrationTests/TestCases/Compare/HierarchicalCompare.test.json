{
  "TestCaseName": "Place An Order and Verify Hierarchy",
  "DataMapFile": "maps/ecommerce.json",
  "Arrange": [
    {
      "Strategy": "JsonFileSeed",
      "Parameters": {
        "table": "Products",
        "dataFile": "data/products.json",
        "allowIdentityInsert": true
      }
    },
    {
      "Strategy": "HierarchicalSeed",
      "Parameters": {
        "dataFile": "data/new_customer_order.json",
        "Outputs": [
          {
            "VariableName": "newOrderId",
            "Source": {
              "FromTable": "Orders",
              "SelectColumn": "OrderId",
              "OrderByColumn": "OrderId",
              "OrderDirection": "DESC"
            }
          }
        ]
      }
    }
  ],
  "Actions": [
    {
      "Strategy": "ApiCall",
      "Parameters": {
        "Method": "GET",
        "Endpoint": "/api/orders"
      }
    }
  ],
  "Assert": [
    {
      "Strategy": "HierarchicalCompare",
      "Parameters": {
        "RootEntity": "Order",
        "FindById": "{newOrderId}",
        "ExpectedDataFile": "expected/full_order.json",
        "IncludePaths": [
          "Customer",
          "OrderStatus",
          "OrderItems.Product"
        ]
      }
    }
  ]
}
